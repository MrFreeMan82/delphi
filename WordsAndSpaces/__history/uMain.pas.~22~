unit uMain;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TState = (stInput, stMaybeWAS, stOneLetterWord, stWord, stFin);

  TfrmWAS = class(TForm)
    input: TMemo;
    output: TMemo;
    btBegin: TButton;
    procedure btBeginClick(Sender: TObject);
  private
    { Private declarations }
    pos: integer;
    ch: char;
    word: string;
    state, lastState: TState;

    procedure wordProc(ch: char);
    procedure changeState(newState: TState);
    function isLetter(ch:char): boolean;
  public
    { Public declarations }
  end;

var
  frmWAS: TfrmWAS;
implementation

{$R *.dfm}

{ TForm1 }

procedure TfrmWAS.wordProc(ch: char);
begin
     case state of
       stInput:
          if isLetter(ch) then
          begin
               word := ch;
               changeState(stMaybeWAS);
               changeState(stInput);
          end;
       stMaybeWAS:
          if isLetter(ch) and (lastState = stOneLetterWord) then
          begin
               //word := word + ch;
               changeState(stFin);
               changeState(stInput);
          end;
          else if ch = ' ' then
          begin
               changeState(stOneLetterWord);
               changeState(stInput);
          end;
stOneLetterWord:;
       stWord: ;
       stFin: ;
     end;
end;

procedure TfrmWAS.btBeginClick(Sender: TObject);
begin
     pos := 0;
     ch := trim(input.Text)[pos];

     while true do
     begin
          wordProc(ch);

          if state = stInput then
          begin
              inc(pos);
              ch :=input.Text[pos];

              changeState(lastState);
          end;
     end;
end;

procedure TfrmWAS.changeState(newState: TState);
begin
    lastState := state;
    state := newState;
end;

function TfrmWAS.isLetter(ch: char): boolean;
begin
     result := charInSet(ch, ['a'..'z', 'A'..'Z', 'à'..'ÿ', 'À'..'ß']);
end;

end.
