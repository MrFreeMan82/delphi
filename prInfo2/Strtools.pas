// считаем повторяющиеся разделители одним
function split(s:string;d:char):TStrArray;
var
	wstart,wlen,wnum:integer;
begin
	if s<>'' then
	begin
		wstart:=1;
		wlen:=0;
		wnum:=0;

		repeat
			inc(wnum);

			wstart:=wstart+wlen;
			while (s[wstart]=d)and(wstart<length(s)) do
				inc(wstart);

			wlen:=0;
			while (wstart<=length(s))and((wstart+wlen)<=length(s))and(s[wstart+wlen]<>d) do
				inc(wlen);

			if wlen<>0 then
			begin
				if length(Result)<=wnum then
					SetLength(Result,length(Result)+10);

				Result[wnum-1]:=copy(s,wstart,wlen);
			end
			else
				wnum:=wnum-1;
		until wstart+wlen>=length(s);

		if length(Result)>wnum then
			Result:=copy(Result,0,wnum);
	end;
end;

